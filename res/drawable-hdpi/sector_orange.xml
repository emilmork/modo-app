<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#636363" />
            <stroke
                android:width="1dp"
                android:color="#8B8989" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="4dp"
                android:top="2dp"
                android:right="4dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#90FF7F24"
                android:endColor="#90FF7F14"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#8B8989" />
            <corners
                android:radius="2dp" />
             <padding
                android:left="4dp"
                android:top="2dp"
                android:right="4dp"
                android:bottom="10dp" />

        </shape>
    </item>
</selector>