<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/civilian_row"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp" >

    <ImageView
        android:id="@+id/civilan_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@drawable/civil" >
    </ImageView>

    <TextView
        android:id="@+id/civilian_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/civilan_image"
        android:text="Civ"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="15dp" >
    </TextView>

    <ImageView
        android:id="@+id/civilian_panic_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/civilan_panic"
        android:background="@drawable/panic_level" >
    </ImageView>

    <TextView
        android:id="@+id/civilan_panic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/civilian_health_image"
        android:text="4"
        android:textColor="@android:color/black"
        android:textSize="15dp" >
    </TextView>

    <TextView
        android:id="@+id/civilan_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/civilian_checkbox"
        android:textColor="@android:color/black"
        android:textSize="15dp" >
    </TextView>

    <ImageView
        android:id="@+id/civilian_health_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/civilan_health"
        android:background="@drawable/health" >
    </ImageView>

    <CheckBox
        android:id="@+id/civilian_checkbox"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp" >
    </CheckBox>

</RelativeLayout>